<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lebelle.myquizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bulb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bulb"
        android:supportsRtl="true"
        android:theme="@style/ActivityMainTheme">
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivityProfilePage"
            android:label="@string/activity_main_profile_page"
            android:theme="@style/AppTheme"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivityPopQuiz"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivityQuestions"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivityAnswers"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>