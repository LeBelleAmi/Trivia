<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">#7B1FA2</item>
        <item name="colorAccent">#FF0084</item>
    </style>

    <style name="ActivityMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your Activity Main theme here. -->
        <item name="colorPrimary">#7B1FA2</item>
        <item name="colorPrimaryDark">#7B1FA2</item>
        <item name="colorAccent">#FFC107</item>
    </style>

    <style name="spinner_style">
        <!-- Customize your spinner here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:background">@drawable/spinner_item_border</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">4dp</item>

    </style>

</resources>
